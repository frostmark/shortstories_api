{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es7", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "pages": ["pages"],
      "components": ["components"],
      "higher-order-components": ["higher-order-components"],
      "images": ["assets/images"],
      "fonts": ["assets/fonts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "webpack.config.js", "public"]
}
