<%= render partial: 'shared/breadcrumbs' %>

<div class="container-fluid">
  <h1>Stories</h1>

  <table class="table">
    <caption>List of stories</caption>
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Text</th>
        <th scope="col">Created at</th>
        <th scope="col">Updated at</th>
      </tr>
    </thead>
    <tbody>
      <% stories.each do |story| %>
        <tr>
          <th scope="row">
            <%= link_to story.id, routes.story_path(id: story.id) %>
          </th>
          <td>
            <%= story.text %>
          </td>
          <td>
            <%= story.created_at %>
          </td>
          <td>
            <%= story.updated_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
